<?xml version="1.0" encoding="utf-8"?>

<Page
    x:Class="Password11.StorageDialogs.GlobalCreate.CreateStorageDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid>
        <StackPanel>
            <TextBlock Text="Create new storage" />
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <AppBarButton Click="StartDatabase" Icon="OtherUser" Label="In database" />
                <AppBarButton Click="StartFile" Icon="OpenFile" Label="In file" />
            </StackPanel>
            <TextBlock Text="Open existing storage" />
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <AppBarButton Click="OpenDatabase" Icon="OtherUser" Label="From database" />
                <AppBarButton Click="OpenFile" Icon="OpenFile" Label="From file" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>